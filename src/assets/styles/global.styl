html {
  box-sizing: border-box;
}

body {
  margin: 0;

  color: #ffffff;
  font: 400 24px/36px $font-family;
}

img {
  max-width: 100%;
  height: auto;
}

a {
  color: inherit;

  text-decoration: none;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

// for a11y hidden
.visually-hidden {
  position: absolute;

  width: 1px;
  height: 1px;
  margin: -1px;

  clip: rect(0 0 0 0);
}